= render 'header', currentPage: 'my_product', admin: false
#details
  #detailsPageHeader
    %h1.item_name
      = "All Tag Categories"

#letter-nav-padding
#notice{class: flash[:type]}
  = flash[:message]
%table#index
  %tbody
    #image
      %img.imageNoText{ src: image_url('product_tag_category_img.png'), width:"360" , height:"360"}

    #description
      %h5
        %p.categorytext
          = "Each category contains a variety of tags to explore!"

    #description
      - ('A'..'Z').to_a.each do |letter|
        - items = ProductTagCategory.where("name LIKE ?", "#{letter}%")
        - items.each do |item|
          = link_to "#{item.name}", product_tag_category_path(item), {method: :get, class:'category_button'}


= render 'footer', currentPage:  ProductTagCategory, admin: false