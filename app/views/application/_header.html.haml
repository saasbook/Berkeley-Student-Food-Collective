%header
  .navbar.navbar-expand-lg.navbar-dark.static-top
    .container-fluid
      .navbar-header
        = link_to discovery_path, id: 'logo', class: 'navbar-brand w-50' do
          = image_tag 'logo450x429.png', id: 'logoheader'
      %button.navbar-toggler{type: 'button', data: {toggle: 'collapse', target: '#navbarResponsive'}, aria: {expanded: 'false', controls: 'navbarResponsive', label: 'Toggle navigation'}}
        %span.navbar-toggler-icon
      #navbarResponsive.collapse.navbar-collapse.w-100
        %ul.navbar-nav.w-100
          -if current_admin
            %li.dropdown
              %a.dropdown{href: admin_path(current_admin), class: 'nav-link'}
                ADMIN
          
          %li.dropdown
            %a.dropdown{href: discovery_path, class: 'nav-link'}
              Discovery
              
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: producer_tags_path, class: 'nav-link'}
              Vendors
              %b.caret
            %ul.dropdown-menu
              %li
                %a{href:my_vendors_path } All Vendors
              %li
                %a{href: producer_tags_path} By Category
              %li
                %a{href: map_my_vendors_path} Map
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: product_tags_path, class: 'nav-link'}
              Products
              %b.caret
            %ul.dropdown-menu
              %li
                %a{href: my_products_path} All Products
              %li
                %a{href: product_tags_path} By Category
              %li
                %a{href: product_tag_categories_path} All Categories
      
    -if current_admin
      .dropdown
        %i.fa.fa-plus
        .dropdown-content
          =button_to 'New Product', new_my_product_path, {method: :get, class: 'prod-link', id: 'new_product'}
          =button_to 'New Vendor', new_my_vendor_path, {method: :get, class: 'prod-link', id: 'new_vendor'}
          =button_to 'New Product Tag', new_product_tag_path, {method: :get, class: 'prod-link', id: 'new_product_tag'}
          =button_to 'New Producer Tag', new_producer_tag_path, {method: :get, class: 'prod-link', id: 'new_producer_tag'}
          =button_to 'New Tag Category', new_product_tag_category_path, {method: :get, class: 'prod-link', id: 'new_tag_category'}
          =button_to 'Update Landing Pages', new_landing_path, {method: :get, class: 'prod-link', id: 'new_landing_button'}
      %button 
        =button_to 'Logout', logout_path, {method: :get, class: 'prod-link', id: 'logout_button'}
    - else
      %button 
        =button_to 'Login', login_path, {method: :get, class: 'prod-link', id: 'login_button'}
       
        
